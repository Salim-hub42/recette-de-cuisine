    </head>
    <body>
       <nav class="navbar bg-primary navbar-expand-lg " data-bs-theme="dark">
          <div class="container-fluid">
              <a class="navbar-brand" href="{{ path('home') }}">Mon Site</a>
          <div class="collapse navbar-collapse">
              <ul class="navbar-nav">
                <li class="nav-item">
                   <a class="nav-link {{ app.current_route == 'home' ? 'active' : '' }}" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link {{ app.current_route starts with  'recipe.' ? 'active' : '' }}" href="{{ path('recipe.index') }}">Recettes</a>
                </li>
              </ul>
          </div>   
          </div>
      </nav>
    <div class="container my-4">
    {% include 'partials/flash.html.twig' %}
